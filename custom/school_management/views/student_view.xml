<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Student  tree view-->
    <record id="view_admission_request_tree" model="ir.ui.view">
        <field name="name">school.student.admission.request.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="student_ref" decoration-bf="1" optional="show"/>
                <field name="name" optional="show"/>
                <field name="picture" optional="hide"/>
                <field name="email" optional="show"/>
                <field name="gender" optional="show"/>
                <field name="state" optional="show" widget="badge"
                       decoration-success="state == 'approved' or state == 'alumni'"
                       decoration-info="state == 'new' or state == 'terminate'"
                       decoration-danger="state == 'cancel'"/>
                <field name="age" optional="show"/>
                <field name="admission_date" widget="date" optional="hide"/>
                <field name="marital_status" optional="show"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>
            </tree>
        </field>
    </record>

    <!--   Student form view  -->
    <record id="view_admission_request_form" model="ir.ui.view">
        <field name="name">school.student.admission.request.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id="button_approved" name="action_approved" states="new"
                            string="Approve" class="btn-primary" type="object"/>

                    <button id="button_cancel" name="action_cancel"
                            confirm="Are you sure that you need to cancel ?"
                            string="Cancel" type="object"/>

                    <button id="button_alumni" name="action_alumni" states="approved"
                            string="Alumni" class="btn-primary" type="object"/>

                    <button id="button_terminate" name="action_terminate" states="alumni"
                            string="Terminate" class="btn-primary" type="object"/>

                    <field name="state" widget="statusbar" statusbar_visible="new,approved,alumni,terminate,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="student_ref" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="picture" widget='image' class="oe_avatar"
                               options='{"preview_image": "avatar_128"}'/>
                        <group string="contact">
                            <field name="student_ref" readonly="1"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="code"/>
                            <field name="roll_number"/>
                            <field name="class_id"/>
                        </group>
                        <group string="Detailed Adress">
                            <field name="street1"/>
                            <field name="street2"/>
                            <field name="country"/>
                            <field name="city"/>
                            <field name="state_adress"/>
                            <field name="zip_code"/>
                            <field name="phone_number"/>
                            <field name="mobile_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group string="General Informations">
                        <field name="gender"/>
                        <field name="birth_date"/>
                        <field name="age"/>
                        <field name="admission_date" readonly="1" invisible="1"/>
                        <field name="marital_status"/>
                        <field name="user_id" attrs="{'invisible':[('state', '!=', 'approved')]}"/>

                    </group>
                </sheet>
                <!--                <div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids"/>-->
                <!--                    <field name="activity_ids"/>-->
                <!--                    <field name="message_ids"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>

    <!--  Student  kanban view-->
    <record id="view_admission_request_kanban" model="ir.ui.view">
        <field name="name">school.student.admission.request.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="age"/>
                <field name="admission_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="on_kanban_global_click">
                            <div class="on_kanban_details">
                                <ul>
                                    <li>
                                        Student Ref :
                                        <field name="student_ref" readonly="1"/>
                                    </li>
                                    <li>
                                        Name :
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        Picture :
                                        <field name="picture"/>
                                    </li>
                                    <li>
                                        Code :
                                        <field name="code"/>
                                    </li>
                                    <li>
                                        Roll Number :
                                        <field name="roll_number"/>
                                    </li>
                                    <li>
                                        Class ID :
                                        <field name="class_id"/>
                                    </li>
                                    <li>
                                        Status :
                                        <field name="state"/>
                                    </li>
                                    <li>
                                        Gender :
                                        <field name="gender"/>
                                    </li>
                                    <li>
                                        Standard :
                                        <field name="standard_id"/>
                                    </li>
                                    <li>
                                        Admission Date :
                                        <field name="admission_date"/>
                                    </li>
                                    <li>
                                        User ID :
                                        <field name="user_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--   Student search view-->
    <record id="view_admission_request_search" model="ir.ui.view">
        <field name="name">school.student.admission.request.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="age"/>
                <field name="admission_date"/>
                <separator/>
                <group string="Group By" expand="0">
                    <filter string="Status" name="groupby_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--   Student admission request action-->
    <record id="action_student_admission_request" model="ir.actions.act_window">
        <field name="name">Admission Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">['|',('state', '=' , 'new'),('state','=','cancel')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student admission request
            </p>
        </field>
    </record>

    <!--    students profiles action-->
    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">['|','|',('state', '=', 'approved'),('state', '=', 'alumni')
            ,('state', '=', 'terminate')]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
        </field>
    </record>
</odoo>