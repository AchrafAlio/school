<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="school_management.view_admission_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='first_name']" position="after">
                <field name="user_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="domain">['|','|',('state', '=', 'approved'),('state', '=', 'alumni')
            ,('state', '=', 'terminate')]
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student
            </p>
        </field>
    </record>

</odoo>